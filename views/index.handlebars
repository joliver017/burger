<h1 class="uk-text-center">Burgers!</h1>

<div class="uk-container uk-align-center">
    <h2 class="uk-text-center">Add a Burger</h2>
    {{!-- This adds a burger to the list --}}
    <form class="uk-text-center" action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Add a burger">
        <button type="submit" class="addBurgerButton">Add New Burger</button>
    </form>
</div>

<div class="uk-text-center uk-column-1-2 uk-column-divider">

<h2>Burgers to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
        <div>
            <form action="/burgers/{{this.id}}" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
            </form>
        </div>
    {{/unless}}
  {{/each}}
  
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
       <div class='burgerEaten'>
            <div>
                {{this.burger_name}}
            </div>
        </div>
    {{/if}}
  {{/each}}
</ul>

</div>

